{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": ["src-tauri/target/", "dist/"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExtraBooleanCast": "off",
        "noForEach": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    },
    "ignore": ["src-tauri/target/", "dist/"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": ["src-tauri/target/", "dist/"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
